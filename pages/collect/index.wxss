/* pages/collect/index.wxss */
.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 20rpx 0;
  display: flex;
}
.collect_main .collect_title .collect_tips {
  padding: 15rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  margin-left: 20rpx;
  color: #555;
  font-size: 24rpx;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_main .collect_content {
  color: #666;
}
.collect_main .collect_content .goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}
.collect_main .collect_content .goods_item .img_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .collect_content .goods_item .img_left image {
  width: 70%;
}
.collect_main .collect_content .goods_item .content_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .goods_item .content_right .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.collect_main .collect_content .goods_item .content_right .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
