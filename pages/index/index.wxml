<view class="shop_index">
	<!-- 搜索框 -->
	<SearchInput></SearchInput>
	<!-- 轮播图 -->
	<view class="index_swiper">
		<swiper autoplay circular indicator-dots>
			<swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
				<navigator>
					<image mode="widthFix" src="{{item.image_src}}"></image>
				</navigator>
			</swiper-item>
		</swiper>
	</view>
	<!-- 分类导航 -->
	<view class="index_cate">
		<navigator wx:for="{{cateList}}" wx:key="name">
			<image mode="widthFix" src="{{item.image_src}}">
			</image>
		</navigator>
	</view>

	<!-- 楼层区域 -->
	<view class="index_floor">
		<view class="floor_group" wx:for="{{floorList}}" wx:key="index">
			<!-- 标题 -->
			<view class="floor_title">
				<image mode="widthFix" src="{{item.floor_title.image_src}}"></image>
			</view>
			<!-- 内容 -->
			<view class="floor-list">
				<navigator wx:for="{{item.product_list}}" wx:for-item="item1" wx:for-index="index1" wx:key="name">
					<image src="{{item1.image_src}}" mode="{{index1 === 0 ? 'widthFix' : 'scaleToFill'}}"></image>
				</navigator>
			</view>
		</view>
	</view>
</view>