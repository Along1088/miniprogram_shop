.user_content .user_main .history_wrap {
  display: flex;
  background-color: rgba(255, 255, 255, 0.7) !important;
  border-radius: 20rpx;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .history_wrap navigator .his_name {
  color: #444;
}
.user_content .user_main .orders_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 15rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #edece8;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .orders_wrap .order_content navigator .order_name {
  color: #666;
}
.user_content .user_main .address_wrap {
  margin-top: 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666;
}
.user_content .user_main .app_info_wrap {
  margin-top: 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  color: #666;
}
.user_content .user_main .app_info_wrap .app_info_item {
  border-bottom: 1rpx solid #edece8;
  padding: 20rpx;
  font-size: 30rpx;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .share_wrap {
  margin-top: 15rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  color: #666;
  font-size: 30rpx;
}
