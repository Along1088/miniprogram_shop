/* pages/user/index.wxss */
page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_image_wrap {
  position: relative;
}
.user_info_wrap .user_image_wrap .user_bg {
  height: 50vh;
  filter: blur(5px);
}
.user_info_wrap .user_image_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_image_wrap .user_info .user_icon {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_image_wrap .user_info .user_name {
  margin-top: 30rpx;
  font-size: 40rpx;
  color: #fff;
}
.user_info_wrap .user_btn {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 1px solid #fff;
  color: #fff;
  font-size: 38rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}
/* 内容部分 */
